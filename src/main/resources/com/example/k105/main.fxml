<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.k105.controllers.MainController">

    <Label text="Система расчёта премий" style="-fx-font-size: 18px;"/>

    <Button fx:id="calculateBonusButton" text="Рассчитать премии" style="-fx-font-size: 14px;"/>

    <Label fx:id="statusLabel" text="Статус операции будет здесь" style="-fx-text-fill: green;"/>

    <TextArea fx:id="resultTextArea" prefHeight="200" prefWidth="300"
              editable="false" wrapText="true" />
</VBox>
