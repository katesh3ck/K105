<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.k105.controllers.MainController">

    <!-- Верхняя панель -->
    <top>
        <Label text="Главное окно"
               alignment="CENTER"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10px;" />
    </top>

    <!-- Центральная часть -->
    <center>
        <VBox spacing="10" alignment="CENTER">
            <TableView fx:id="tableView" prefWidth="700" prefHeight="400">
                <columns>
                    <!-- Добавим тестовые колонки -->
                    <TableColumn fx:id="idColumn" text="ID" />
                    <TableColumn fx:id="nameColumn" text="Имя" />
                    <TableColumn fx:id="positionColumn" text="Позиция" />
                </columns>
            </TableView>

            <!-- Кнопка для вызова действия -->
            <Button fx:id="calculateBonusButton" text="Рассчитать бонус" />
        </VBox>
    </center>

</BorderPane>
