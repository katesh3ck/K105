<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.k105.controllers.HelloController">

    <!-- Верхняя панель -->
    <top>
        <Label text="Список сотрудников"
               alignment="CENTER"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10px;" />
    </top>

    <!-- Центральная часть -->
    <center>
        <VBox spacing="10" alignment="CENTER">
            <TableView fx:id="tableView" prefWidth="700" prefHeight="400">
                <!-- Таблица с данными сотрудников -->
            </TableView>
        </VBox>
    </center>

    <!-- Нижняя панель с кнопками -->
    <bottom>
        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10px;">
            <Button fx:id="loadButton" text="Загрузить данные" />
            <Button fx:id="calculateButton" text="Рассчитать премии" />
        </HBox>
    </bottom>

</BorderPane>
